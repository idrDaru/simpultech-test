<%= form_with model: [ @room, @room.messages.build ] do |form| %>
    <div style="border: 1px solid yellow; display: grid; grid-template-columns: 1fr 10%; height: 100%; width: 100%;">
        <div style="border: 1px solid red; padding: 1vw;">
            <%= form.text_field :message, style: "border: 1px solid blue; width: 100%; height: 100%;" %>
        </div>

        <div style="padding: 1vw;">
            <%= form.submit "Send", style: "width: 100%; height: 100%;" %>
        </div>
    </div>  
<% end %>